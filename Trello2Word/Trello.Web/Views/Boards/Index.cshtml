@model IEnumerable<Trello.Models.Board>

@{
    ViewBag.Title = "View";
}

<h2>Boards</h2>

<div class="jumbotron">
    <table class="table table-striped table-hover ">
        <tbody>
        <thead>
            <tr>
                <th></th>
                <th></th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Name, "Details", "Boards", new { id = item.Id }, null)
                    @if (item.Description != null)
                    {
                        <p><i>@item.Description</i></p>
                    }
                </td>
                <td>
                    @Html.ActionLink("Generate...", "Details", "Boards", new { id = @item.Id }, htmlAttributes: new { @class = "btn btn-primary btn-sm", @style = "float: right" })
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

